MONGODB_PASSWORD="MongoDB username Password"
MONGODB_CLUSTER_NAME="Mongo Cluster Name"
MONGODB_CLUSTER_ID="ClusterId"
MONGODB_DATABASE="DBName"

# MongoDB Configuration (Local - Alternative)
# MONGODB_URI=mongodb://localhost:27017/
# MONGODB_DB_NAME=lawlibra_rag_db

# ChromaDB Configuration
